# Airflow configuration for ML pipeline
# ====================================

# Database settings
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:///airflow.db

# Core settings
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__DAGS_ARE_PAUSED_AT_CREATION=False
AIRFLOW__CORE__MAX_ACTIVE_RUNS_PER_DAG=1
AIRFLOW__CORE__MAX_ACTIVE_TASKS_PER_DAG=8

# Webserver settings
AIRFLOW__WEBSERVER__EXPOSE_CONFIG=True
AIRFLOW__WEBSERVER__WEB_SERVER_PORT=8080
AIRFLOW__WEBSERVER__SECRET_KEY=ml_pipeline_secret_key_2025

# Scheduler settings
AIRFLOW__SCHEDULER__DAG_DIR_LIST_INTERVAL=30
AIRFLOW__SCHEDULER__CATCHUP_BY_DEFAULT=False

# Logging settings
AIRFLOW__LOGGING__LOGGING_LEVEL=INFO
AIRFLOW__LOGGING__COLORED_CONSOLE_LOG=True

# Security settings
AIRFLOW__CORE__FERNET_KEY=ml_pipeline_fernet_key_2025_abcdefghijklmnopqrstuvwxyz123456

# Email settings (optional)
AIRFLOW__EMAIL__EMAIL_BACKEND=airflow.utils.email.send_email_smtp
AIRFLOW__SMTP__SMTP_HOST=localhost
AIRFLOW__SMTP__SMTP_PORT=587
AIRFLOW__SMTP__SMTP_STARTTLS=True
AIRFLOW__SMTP__SMTP_SSL=False

# Celery settings (for distributed execution)
AIRFLOW__CELERY__BROKER_URL=redis://localhost:6379/0
AIRFLOW__CELERY__RESULT_BACKEND=redis://localhost:6379/0

# Machine Learning specific settings
ML_DATA_PATH=/opt/airflow/ml_data
ML_MODEL_PATH=/opt/airflow/ml_models
ML_DATASET_TYPE=california_housing
