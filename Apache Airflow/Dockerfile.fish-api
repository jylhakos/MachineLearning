# Fish Weight Prediction API Docker configuration
FROM python:3.9-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Copy API requirements
COPY fish_api_requirements.txt .
RUN pip install --no-cache-dir -r fish_api_requirements.txt

# Copy fish API application
COPY fish_api.py .

# Create models directory
RUN mkdir -p /models

# Expose API port
EXPOSE 8000

# Health check for fish API
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl --fail http://localhost:8000/health || exit 1

# Run fish weight prediction API
CMD ["uvicorn", "fish_api:app", "--host", "0.0.0.0", "--port", "8000"]
